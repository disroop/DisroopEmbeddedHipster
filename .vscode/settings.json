{
  "cmake.configureOnOpen": false,
  //"C_Cpp.default.configurationProvider": "vector-of-boolean.cmake-tools",
  //"C_Cpp.intelliSenseEngine": "Default",
  "C_Cpp.loggingLevel": "Error",
  "testMate.cpp.test.parallelExecutionOfExecutableLimit": 1,
  "testMate.cpp.test.advancedExecutables": [
    {
      "pattern": "**/{build,Linux-None-Debug,cmake-build-Linux-None-Debug}/**/bin/*{test,Test,TEST}",
    }
  ],
  "testMate.cpp.debug.configTemplate": {
    "type": "cppdbg",
    "request": "launch",
    "args": [],
    "stopAtEntry": true,
    "cwd": "${workspaceFolder}",
    "program": "${exec}",
    "env": "${envObj}",
    "environment": "${envObjArray}",
    "sourceFileMap": "${sourceFileMapObj}",
    "externalConsole": false,
    "logging": {
      "trace": false,
      "traceResponse": false
    },
    "MIMode": "gdb",
    "miDebuggerPath": "/usr/bin/gdb"
  },
  "todohighlight.include": [
    "**/*.c",
    "**/*.cpp",
    "**/*.h",
    "**/*.txt",
    "**/*.py"
  ],
  "python.pipenvPath": "/usr/bin/pip3",
  "python.linting.pylintArgs": [
    "--generate-members"
  ],
  "python.envFile": "${workspaceFolder}/.env/dev.env",
  "python.pythonPath": "/bin/python",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.banditEnabled": false,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/_deps/**": true,
    "**/CMakeFiles/**": true,
    "**/.conan/*/**": true
  },
  "cmake.buildDirectory": "${workspaceFolder}/build/${buildKit}",
  "cmake.configureOnEdit": true,
  "cmake.parseBuildDiagnostics": true,
  "cmake.sourceDirectory": "${workspaceFolder}/blinky",
  "output.smartScroll.enabled": false,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "workbench.tree.indent": 20,
  "cortex-debug.armToolchainPath": "/home/dev/.conan/data/gcc_arm_none_eabi/10.2.0/disroop/release/source/toolchain/bin",
  "numberedBookmarks.navigateThroughAllFiles": "replace",
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
  "clangd.arguments": [
    "--resource-dir=/usr/lib/clang/10.0.0"
  ],
  "clangd.path": "/usr/bin/clangd-12",

  "snyk.features.codeQuality": true,
  
}